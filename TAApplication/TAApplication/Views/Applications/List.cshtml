@model IEnumerable<TAApplication.Models.Application>
@using Microsoft.AspNetCore.Identity
@using TAApplication.Areas.Data
@inject RoleManager<IdentityRole> rm
@inject UserManager<TAUser> um

@{
    ViewData["Title"] = "List";
}



<h1 class="center">Applicant List</h1>
<table id="applicants-table" class="table table-striped">
    <thead>
        <tr class="applicants-header-row">
            <th scope="col" class="applicants-header-data">Name</th>
            <th scope="col" class="applicants-header-data">@Html.DisplayNameFor(model => model.DegreePursuing)</th>
            <th scope="col" class="applicants-header-data">@Html.DisplayNameFor(model => model.Department)</th>
            <th scope="col" class="applicants-header-data">@Html.DisplayNameFor(model => model.GPA)</th>
            <th scope="col" class="applicants-header-data">@Html.DisplayNameFor(model => model.DesiredHours)</th>
            <th scope="col" class="applicants-header-data">@Html.DisplayNameFor(model => model.AvailableBeforeSemester)</th>
            <th scope="col" class="applicants-header-data">@Html.DisplayNameFor(model => model.SemestersCompleted)</th>
            <th scope="col" class="applicants-header-data">@Html.DisplayNameFor(model => model.ModificationDate)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="applicant-name"><a class="table-link" asp-controller="Applications" asp-area="Applications" asp-action="ApplicationDetails">@item.TAUser.Name</a></td>
                <td class="">@Html.DisplayFor(modelItem => item.DegreePursuing)</td>
                <td class="applicant-GPA">@Html.DisplayFor(modelItem => item.GPA)</td>
                <td class="applicant-degree"> @Html.DisplayFor(modelItem => item.Department)</td>
                <td class="applicant-desiredhours">@Html.DisplayFor(modelItem => item.DesiredHours)</td>
                <td class="applicant-rating">@Html.DisplayFor(modelItem => item.AvailableBeforeSemester)</td>
                <td class="applicant-semesters-completed">@Html.DisplayFor(modelItem => item.SemestersCompleted)</td>
                <td class="applicant-last-updated">@Html.DisplayFor(modelItem => item.ModificationDate)</td>
            </tr>
        }
    </tbody>
</table>